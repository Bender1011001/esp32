{
    "nodes": {
        "root": {
            "type": "menu",
            "items": [
                "wifi",
                "ble",
                "rf",
                "nfc",
                "system"
            ]
        },
        "screen_wifi_scan": {
            "type": "app",
            "capability": "scanWiFi"
        },
        "screen_wifi_sniff": {
            "type": "app",
            "capability": "startSniffing"
        },
        "screen_wifi_deauth": {
            "type": "app",
            "capability": "sendDeauth"
        },
        "screen_wifi_csi": {
            "type": "app",
            "capability": "enableCSI"
        },
        "screen_ble_scan": {
            "type": "app",
            "capability": "scanBLE"
        },
        "screen_ble_spam": {
            "type": "app",
            "capability": "bleSpam"
        },
        "screen_rf_spectrum": {
            "type": "app",
            "capability": "rf_analyzer"
        },
        "screen_rf_rx": {
            "type": "app",
            "capability": "receiveCC1101"
        },
        "screen_rf_tx": {
            "type": "app",
            "capability": "sendCC1101"
        },
        "screen_nfc_read": {
            "type": "app",
            "capability": "readPassiveTargetID"
        },
        "screen_nfc_emul": {
            "type": "app",
            "capability": "TgInitAsTarget"
        },
        "screen_sys_status": {
            "type": "info"
        },
        "screen_sys_about": {
            "type": "info"
        }
    },
    "transitions": {
        "root": {
            "SELECT": "$item.target"
        },
        "screen_*": {
            "BACK": "root"
        }
    },
    "super_states": {
        "PANIC": {
            "trigger": "HOLD_BACK",
            "target": "root"
        },
        "ALERT": {
            "trigger": "CRITICAL_ERROR",
            "target": "modal_alert"
        }
    }
}