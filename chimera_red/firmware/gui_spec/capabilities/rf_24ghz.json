{
    "module": "ESP32-S3-Radio",
    "bus": "Internal",
    "functions": [
        {
            "name": "scanWiFi",
            "blocking": true,
            "duration_ms": 2500,
            "note": "Scans all channels. Breaks connection."
        },
        {
            "name": "scanBLE",
            "blocking": true,
            "duration_ms": 5000,
            "note": "Async possible on Core 0, but current impl is blocking"
        },
        {
            "name": "startSniffing",
            "params": [
                "int channel"
            ],
            "blocking": false,
            "note": "Enters Promiscuous mode. High traffic on Serial."
        },
        {
            "name": "stopSniffing",
            "blocking": false
        },
        {
            "name": "sendDeauth",
            "params": [
                "mac target",
                "mac ap"
            ],
            "blocking": false,
            "note": "Injects frame"
        },
        {
            "name": "enableCSI",
            "params": [
                "bool en"
            ],
            "blocking": false,
            "note": "Enables Channel State Information collection"
        },
        {
            "name": "bleSpam",
            "blocking": true,
            "duration_ms": 2000,
            "note": "Floods advertisements"
        }
    ]
}